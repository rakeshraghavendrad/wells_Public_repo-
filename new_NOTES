from PIL import ImageEnhance, ImageFilter

def gray_and_sharpen(image):
    """
    Converts the given image to grayscale, enhances contrast, and sharpens it.
    
    Parameters:
    - image (PIL Image): Original image to be processed.
    
    Returns:
    - sharpened_image (PIL Image): Grayscale, enhanced, and sharpened version of the image.
    """
    # Convert to grayscale
    gray = image.convert("L")
    
    # Enhance contrast
    enhancer = ImageEnhance.Contrast(gray)
    enhanced_gray = enhancer.enhance(2.0)
    
    # Apply sharpening
    sharpened_image = enhanced_gray.filter(ImageFilter.SHARPEN)
    
    return sharpened_image

# Example usage
sharpened_image = gray_and_sharpen(cropped_image)

# Display the sharpened image to verify
sharpened_image.show()
