from PIL import Image

def extract_coordinates(image_path, coordinates):
    """
    Extracts the region specified by the coordinates from the image and saves it as a variable.
    
    Parameters:
    - image_path (str): Path to the image file.
    - coordinates (tuple): Coordinates in the format (xmin, ymin, xmax, ymax).
    
    Returns:
    - cropped_image (PIL Image): Cropped image based on coordinates.
    """
    # Load the image
    img = Image.open(image_path)

    # Extract coordinates
    xmin, ymin, xmax, ymax = coordinates

    # Crop the specified region
    cropped_image = img.crop((xmin, ymin, xmax, ymax))

    return cropped_image

# Example usage
image_path = "/mnt/data/Screenshot 2025-05-13 at 8.01.28â€¯PM.png"
coordinates = (50, 50, 200, 100)  # Example coordinates
cropped_image = extract_coordinates(image_path, coordinates)

# Display the cropped image to verify
cropped_image.show()
