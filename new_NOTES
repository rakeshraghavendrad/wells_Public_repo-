def restore_original_color(masked_image, original_image, coordinates):
    """
    Restores the original color from the original image to the masked region.
    
    Parameters:
    - masked_image (PIL Image): Grayscale masked image with a white rectangle.
    - original_image (PIL Image): Original colored image.
    - coordinates (tuple): Coordinates in the format (xmin, ymin, xmax, ymax).
    
    Returns:
    - color_restored_image (PIL Image): Image with original color restored to the masked area.
    """
    # Create a copy of the masked image to restore color
    color_restored_image = masked_image.convert("RGB")
    
    # Extract coordinates
    xmin, ymin, xmax, ymax = coordinates
    
    # Extract the original color from the original image
    color_patch = original_image.crop((xmin, ymin, xmax, ymax))
    
    # Paste the original color onto the masked image
    color_restored_image.paste(color_patch, (xmin, ymin))
    
    return color_restored_image

# Example usage
color_restored_image = restore_original_color(masked_image, cropped_image, (50, 50, 200, 100))

# Display the color restored image to verify
color_restored_image.show()
