from PIL import Image, ImageDraw

# Load the image
image = Image.open('path_to_image.jpg')
draw = ImageDraw.Draw(image)

# Coordinates for the area to cover
xmin, ymin, xmax, ymax = 100, 50, 300, 100  # Adjust these coordinates as needed

# Crop a small patch from the original background
background_patch = image.crop((xmin, ymin, xmin + 10, ymin + 10))

# Fill the area with the repeated background patch
for x in range(xmin, xmax, 10):
    for y in range(ymin, ymax, 10):
        image.paste(background_patch, (x, y))

# Save or display the modified image
image.show()
