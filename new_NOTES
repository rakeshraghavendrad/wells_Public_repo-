# Function to remove duplicate words while maintaining order
def remove_duplicate_words(text):
    seen = set()
    words = text.split()
    unique_text = ' '.join([word for word in words if not (word in seen or seen.add(word))])
    return unique_text

# Step 1: Merge 'address1', 'address2', 'address3' into 'full_address'
df2['full_address'] = df2[['address1', 'address2', 'address3']].agg(' '.join, axis=1)

# Step 2: Remove duplicate words within 'full_address'
df2['full_address'] = df2['full_address'].apply(remove_duplicate_words)
