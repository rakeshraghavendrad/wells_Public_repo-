# Step 6: Prioritize classification when two scores are equally low
    df2.loc[df2['min_score_metrics'].apply(lambda x: set(x) == {"levenshtein_score", "fuzzy_partial_ratio"}), 'summary'] = "Character-level & word-level typo."
    df2.loc[df2['min_score_metrics'].apply(lambda x: set(x) == {"levenshtein_score", "jaro_winkler"}), 'summary'] = "Typos with reordering."
    df2.loc[df2['min_score_metrics'].apply(lambda x: set(x) == {"fuzzy_partial_ratio", "jaro_winkler"}), 'summary'] = "Missing/Extra words + reordering."

    # Combine results
