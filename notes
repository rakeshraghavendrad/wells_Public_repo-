from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.metrics.pairwise import cosine_similarity

# Combine relevant fields into a single string for each record
db1['combined'] = db1.apply(lambda x: ' '.join(x), axis=1)
db2['combined'] = db2.apply(lambda x: ' '.join(x), axis=1)

# Create a TfidfVectorizer to convert the combined strings into vectors
vectorizer = TfidfVectorizer()

# Fit the vectorizer to both datasets
tfidf_matrix = vectorizer.fit_transform(pd.concat([db1['combined'], db2['combined']]))

# Compute cosine similarity
cosine_sim_matrix = cosine_similarity(tfidf_matrix[:len(db1)], tfidf_matrix[len(db1):])

# Create a DataFrame for cosine similarity results
cosine_sim_df = pd.DataFrame(cosine_sim_matrix, columns=db2.index, index=db1.index)
print(cosine_sim_df)
