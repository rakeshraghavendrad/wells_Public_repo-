spark = SparkSession.builder \
    .master('yarn') \
    .appName('simple_app') \
    .config('spark.executor.instances', '5') \
    .config('spark.executor.memory', '4g') \
    .config('spark.sql.parquet.writeLegacyFormat', 'true') \
    .config('spark.jars', '/opt/jar1.jar,/opt/jar2.jar,/opt/jar3.jar') \
    .enableHiveSupport() \
    .getOrCreate()
