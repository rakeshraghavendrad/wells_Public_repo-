import pandas as pd

# Sample DataFrame
data = {
    'Name': ['Alice', 'Bob!', 'Charlie@', 'David#'],
    'City': ['New York', 'San Francisco', 'Los!Angeles', 'Miami'],
    'Age': [25, 30, 35, 40]
}
df = pd.DataFrame(data)

# Define a regex pattern for special characters
special_char_pattern = r'[^a-zA-Z0-9\s]'

# Find rows with special characters in any column
rows_with_special_chars = df.apply(lambda row: row.astype(str).str.contains(special_char_pattern).any(), axis=1)

# Display rows containing special characters
special_char_df = df[rows_with_special_chars]

print(special_char_df)
